#:kivy 2.1.0

<EntryScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Unpause App"
            font_name: "fonts/Poppins/Poppins-Light.ttf"
            font_size: "60dp"
        Button:
            text: "Rozpocznij"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'functions'

<Functions>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "A"
        Button:
            text: "B"
        Button:
            text: "C"
        Button:
            text: "D"
        Button:
            text: "E"
        Button:
            text: "F"
        Button:
            text: "Quit"
            on_press:
                root.manager.transition.direction = 'right' 
                root.manager.current = 'entry'